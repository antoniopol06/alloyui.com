<!doctype html>
<html>
  <head prefix="og: http://ogp.me/ns# fb: http://ogp.me/ns/fb# website: http://ogp.me/ns/website#">

    <title><%= @getPreparedTitle() %></title>

    <meta charset="utf-8">
    <meta name="author" content="Iliyan Peychev">
    <meta name="description" content="<%= @getPreparedDescription() %>">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Facebook Tags -->
    <meta property="fb:app_id" content="176947299114210">
    <meta property="og:type" content="website">
    <meta property="og:url" content="<%= @getSiteUrl() %>">
    <meta property="og:image" content="<%= @getAssetsUrl() %>/img/facebook-share.jpg">
    <meta property="og:title" content="<%= @getPreparedTitle() %>">
    <meta property="og:description" content="<%= @getPreparedDescription() %>">

    <!-- Favicon -->
    <link rel="shortcut icon" type="image/x-icon" href="<%= @getAssetsUrl() %>/img/favicon.ico">

    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css">

    <!-- CSS: Website style -->
    <link href="<%= @getAssetsUrl() %>/css/main.css" rel="stylesheet">

    <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>

    <!-- Latest compiled and minified JavaScript -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/js/bootstrap.min.js"></script>

    <!-- Fonts -->
    <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css">
    <link href='http://fonts.googleapis.com/css?family=Lato:300,400,700,300italic,400italic,700italic' rel='stylesheet' type='text/css'>
  </head>

  <body>
    <div id="mobileNavbarShadow"></div>

    <div id="wrap">
      <nav class="navbar-fixed-top navbar-main collapsed" role="navigation">
        <div class="container">
          <div class="col-md-11">
            <div class="navbar-header">
              <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#siteSections">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="glyphicon glyphicon-remove"></span>
              </button>

              <a class="navbar-brand" href="<%= @getSiteUrl() %>">
                <img alt="AlloyEditor Logo" class="hidden-sm" height="40" src="<%= @getAssetsUrl() %>/img/logo.png">
                <img alt="AlloyEditor Logo" class="visible-sm-block" height="40" src="<%= @getAssetsUrl() %>/img/logo_small.png">
              </a>
            </div>

            <div class="collapse navbar-collapse navbar-right" id="siteSections">
              <ul class="nav navbar-nav">
                <li<% if @document.category == "Demo": %> class="active"<% end %>><a href="<%= @getSiteUrl() %>/demo/">Live Demo</a></li>
                <li<% if @document.category == "Updates": %> class="active"<% end %>><a href="<%= @getSiteUrl() %>/updates/">What's New</a></li>
                <li<% if @document.category == "Guides": %> class="active inactive-xs"<% end %>><a href="<%= @getSiteUrl() %>/guides/">Guides</a>
                  <ul class="nav navbar-nav visible-xs-block">
                    <% for tutorial in @getCollection("guides").toJSON(): %>
                      <% if tutorial.target == "user": %>
                        <li<% if tutorial.title == @document.title: %> class="active"<% end %>>
                          <a href="<%= @getSiteUrl() %><%= tutorial.url %>"><%= tutorial.title %></a>
                        </li>
                      <% end %>
                    <% end %>
                    <% for tutorial in @getCollection("guides").toJSON(): %>
                      <% if tutorial.target == "developer": %>
                        <li<% if tutorial.title == @document.title: %> class="active"<% end %>>
                          <a href="<%= @getSiteUrl() %><%= tutorial.url %>"><%= tutorial.title %></a>
                        </li>
                      <% end %>
                    <% end %>
                  </ul>
                </li>
                <li<% if @document.category == "Features": %> class="active inactive-xs"<% end %>><a href="<%= @getSiteUrl() %>/features/">Features</a>
                  <ul class="nav navbar-nav visible-xs-block">
                    <% for example in @getCollection("features").toJSON(): %>
                      <% if example.category && example.index: %>
                        <li<% if example.title == @document.title: %> class="active"<% end %>>
                          <a href="<%= @getSiteUrl() %><%= example.url %>"><%= example.title %></a>
                        </li>
                      <% end %>
                    <% end %>
                  </ul>
                </li>
                <li<% if @document.category == "Api": %> class="active"<% end %>><a href="<%= @getSiteUrl() %>/api/" target="_blank">API Docs</a></li>
                <li<% if @document.category == "Contribute": %> class="active"<% end %>><a href="<%= @getSiteUrl() %>/contributing/">Contributing</a></li>
                <li<% if @document.category == "About": %> class="active"<% end %>><a href="<%= @getSiteUrl() %>/about/">About</a></li>
              </ul>
            </div>
          </div>
        </div>
      </nav>

      <div id="content">
        <%- @content %>
      </div>

      <footer class="container" id="siteFooter">
        <div class="col-md-10 col-md-offset-1">
          <span class="fork"><a href="<%= @site.githubUrl %>blob/master/LICENSE.md">LGPL License</a></span>
          <span class="fork pull-right"><a href="<%= @site.githubUrl %>">Fork me on Github</a></span>
          <p class="copyright">@ 2015-2016 Liferay, Inc. All Rights Reserved</p>
        </div>
      </footer>
    </div>

    <script>
      var mainNavbar = $('.navbar-main');
      var navbarShadow = $('#mobileNavbarShadow');
      var siteContent = $('#content');
      var siteFooter = $('#siteFooter');
      var siteSections = $('#siteSections');

      siteSections.on('show.bs.collapse', function() {
        mainNavbar.removeClass('collapsed');
        navbarShadow.addClass('visible');
      });

      siteSections.on('shown.bs.collapse', function() {
        siteContent.addClass('hide');
        siteFooter.addClass('hide');
      });

      siteSections.on('hide.bs.collapse', function() {
        mainNavbar.addClass('collapsed');
        navbarShadow.removeClass('visible');
        siteContent.removeClass('hide');
        siteFooter.removeClass('hide');
      });
    </script>

    <script>
    (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
    (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
    m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
    })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

    ga('create', 'UA-53538246-1', 'auto');
    ga('send', 'pageview');

  </script>

  </body>
</html>