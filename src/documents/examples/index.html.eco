<script>
    var CKEDITOR_BASEPATH = '<%= @getAssetsUrl() %>/js/alloy-editor/';
</script>

<script src="<%= @getAssetsUrl() %>/js/alloy-editor/alloy-editor-all.js"></script>

<script id="buttonH4">
    YUI.add('button-h4', function(Y) {
        'use strict';

        var Lang = Y.Lang;

        var H4 = Y.Base.create('h4', Y.Plugin.Base, [Y.ButtonBase], {
             // There is no icon for H4 right now, but look ma, even a simple text is enough.
             // In production, it would be better to add icon instead raw text.
            TPL_CONTENT: '<i class="alloy-editor-icon-h4">h4</i>'
        }, {
            NAME: 'h4',

            NS: 'h4',

            ATTRS: {
                element: {
                    validator: Lang.isString,
                    value: 'h4'
                }
            }
        });

        Y.ButtonH4 = H4;

    }, '', {
        requires: ['button-base']
    });
</script>

<script>
    YUI().use('alloy-editor', 'button-h4', 'aui-popover', 'widget-anim', function(Y) {
        var contentEditableNode = Y.one('#contentEditable');

        function destroyPopover() {
            popoverAnim.destroy();
        }

        var popoverAnim = new Y.Popover({
            align: {
                node: '#hintTarget',
                points: [Y.WidgetPositionAlign.BC, Y.WidgetPositionAlign.TC]
            },
            bodyContent: 'Just click inside the content below and start typing.',
            cssClass: 'sample-hint',
            id: 'sampleHint',
            plugins: [Y.Plugin.WidgetAnim],
            position: 'top',
            render: true,
            zIndex: 402
        });

        contentEditableNode.once('focus', destroyPopover);

        popoverAnim.get('boundingBox').once('click', destroyPopover);

        var editor = new Y.AlloyEditor({
            srcNode: '#contentEditable',
            toolbars: {
                add: ['image'],
                image: ['left', 'right'],
                styles: ['strong', 'em', 'u', 'h1', 'h2', 'h4', 'a', 'twitter']
            }
        });
    });
</script>
